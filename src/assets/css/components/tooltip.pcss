.tooltipped {
  display: inline-block;
  padding: 0.1em 0.2em;
  position: relative;
  background: none;
  border: none;
  border-bottom: 2px dotted var(--accent);

  .tooltip {
    display: none;
    position: absolute;
    background-color: #fff;
    top: calc(-100% - 14px);
    left: 50%;
    padding: .3em;
    border-radius: 5px;
    width: max-content;
    transform: translateX(-50%);
  }

  &:focus,
  &:hover {
    .tooltip {
      display: inline-block;
    }
  }
}

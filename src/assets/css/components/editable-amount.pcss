.editable-amount {
  display: inline-block;
  position: relative;

  &__amount {
    display: inline-block;
    padding: 0.2em 0.5em;
    border-radius: 0.2em;
    border: 2px dashed var(--accent);
  }
}

.editable {
  &__controls {
    position: fixed;
    width: 100vw;
    left: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
    padding-top: var(--space);
    padding-bottom: var(--space);
    z-index: 1;

    input[type="range"] {
      max-width: 720px;
    }

    button {
      background: none;
      margin-left: var(--space-2);
      margin-right: var(--space-2);
      width: 40px;
      flex-shrink: 0;
      height: 40px;
      border: 2px solid var(--accent);
      color: var(--accent);
      border-radius: 4px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }

  &__waves {
    position: absolute;
    width: 100%;
    bottom: 100%;
    left: 0;
    pointer-events: none;
  }
}

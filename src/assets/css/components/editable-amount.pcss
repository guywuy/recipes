.editable-amount {
  display: inline-block;
  position: relative;

  &--editing {
    padding-bottom: 50px;
  }
}

.editable {
  display: inline-block;
  padding: 0.2em 0.5em;
  border-radius: 0.2em;
  border: 2px dashed var(--accent);
}

.rangeInput {
  position: absolute;
  left: 0;
  top:calc(100% - 50px);
}